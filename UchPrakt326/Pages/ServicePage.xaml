<Page x:Class="UchPrakt326.Pages.ServicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UchPrakt326.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ServicePage">

    <Grid>
        <TextBlock Text="" Background="#FF04A0FF"/>
        <ListView x:Name="LvList" d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5" Width="775" Height="100">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100*"/>
                                <ColumnDefinition Width="676*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <Image Height="100" Width="100"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="20 0 0 0">
                                <TextBlock Text="{Binding Name}"/>
                                <TextBlock Text="{Binding CostPerMin}"/>
                                <TextBlock Text="{Binding Discount}"/>
                                <StackPanel Orientation="Horizontal" Margin="0 30 0 0">
                                    <Button Content="редактировать" Margin="0 0 20 0"/>
                                    <Button Content="удалить" Margin="0 0 20 0"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
