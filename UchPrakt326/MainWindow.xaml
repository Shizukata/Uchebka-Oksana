<Window x:Class="UchPrakt326.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UchPrakt326"
        mc:Ignorable="d" Icon="Resources/school_logo.ico"
        Title="Школа иностранных языков" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Background="White" Height="60" Orientation="Horizontal">
                <Image HorizontalAlignment="Left" Margin="10 0 0 0" 
                       RenderOptions.BitmapScalingMode="Fant"
                       Height="60" Source="Resources/school_logo.png"/>
                <StackPanel Orientation="Horizontal" Margin="560 0 0 0" Height="35" 
                            Background="#FFE7FABF" Width="135">
                    <TextBox MaxLength="4" x:Name="TbGodCode" Height="20" Width="70" Margin="10 0 5 0"/>
                    <Button Content="Войти" Height="20" Width="40" Background="Transparent"
                            BorderBrush="Gray" Click="Button_Click_GM"/>
                </StackPanel>
            </StackPanel>
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" 
                   Height="365"/>
        </StackPanel>
    </Grid>
</Window>
